/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // Put your code here:
	Inc16(in = feedback, out = outplus);
	Mux16(a = outplus, b = in, sel = load, out = w1);
	Mux16(a = w1, b = false, sel = reset, out = input);
	Or(a = load, b = inc, out = temp);
	Or(a = temp, b = reset, out = PCload);
	Register(in = input, load = PCload, out = feedback, out = out);
}
